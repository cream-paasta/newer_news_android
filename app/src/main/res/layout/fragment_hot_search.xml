<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_background_color"
    tools:context=".presentation.ui.mainfragment.hotsearch.HotSearchFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_hot_location"
        android:layout_width="0dp"
        android:layout_height="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv_hot_news"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_hot_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rv_hot_location"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="@string/hot_location"/>

            <ProgressBar
                android:id="@+id/progress_bar_hot_locations"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/rv_hot_location"
                app:layout_constraintBottom_toBottomOf="@id/rv_hot_location"
                app:layout_constraintLeft_toLeftOf="@id/rv_hot_location"
                app:layout_constraintRight_toRightOf="@id/rv_hot_location"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_hot_location"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_hot_location_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:overScrollMode="never"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_hot_news"
        android:layout_width="0dp"
        android:layout_height="330dp"
        app:layout_constraintTop_toBottomOf="@id/cv_hot_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_hot_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rv_hot_news"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="@string/hot_news"/>

            <ProgressBar
                android:id="@+id/progress_bar_hot_news"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/rv_hot_news"
                app:layout_constraintBottom_toBottomOf="@id/rv_hot_news"
                app:layout_constraintLeft_toLeftOf="@id/rv_hot_news"
                app:layout_constraintRight_toRightOf="@id/rv_hot_news"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_hot_news"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_hot_news_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:overScrollMode="never"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>