<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.mainfragment.hotsearch.HotSearchFragment">


    <ImageView
        android:id="@+id/iv_hot_location_layout"
        android:layout_width="0dp"
        android:layout_height="330dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_hot_news_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:src="@drawable/layout_hot_search"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_hot_location_layout"
        app:layout_constraintBottom_toTopOf="@id/rv_hot_location"
        app:layout_constraintLeft_toLeftOf="@id/iv_hot_location_layout"
        app:layout_constraintRight_toRightOf="@id/iv_hot_location_layout"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/default_text_color"
        android:text="@string/hot_location"/>

    <ProgressBar
        android:id="@+id/progress_bar_hot_locations"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/rv_hot_location"
        app:layout_constraintBottom_toBottomOf="@id/rv_hot_location"
        app:layout_constraintLeft_toLeftOf="@id/rv_hot_location"
        app:layout_constraintRight_toRightOf="@id/rv_hot_location"/>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hot_location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_hot_location_layout"
        app:layout_constraintBottom_toBottomOf="@id/iv_hot_location_layout"
        app:layout_constraintLeft_toLeftOf="@id/iv_hot_location_layout"
        app:layout_constraintRight_toRightOf="@id/iv_hot_location_layout"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:overScrollMode="never"/>

    <ImageView
        android:id="@+id/iv_hot_news_layout"
        android:layout_width="0dp"
        android:layout_height="330dp"
        app:layout_constraintTop_toBottomOf="@id/iv_hot_location_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:src="@drawable/layout_hot_search"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_hot_news_layout"
        app:layout_constraintBottom_toTopOf="@id/rv_hot_news"
        app:layout_constraintLeft_toLeftOf="@id/iv_hot_news_layout"
        app:layout_constraintRight_toRightOf="@id/iv_hot_news_layout"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/default_text_color"
        android:text="@string/hot_news"/>

    <ProgressBar
        android:id="@+id/progress_bar_hot_news"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/rv_hot_news"
        app:layout_constraintBottom_toBottomOf="@id/rv_hot_news"
        app:layout_constraintLeft_toLeftOf="@id/rv_hot_news"
        app:layout_constraintRight_toRightOf="@id/rv_hot_news"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hot_news"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/iv_hot_news_layout"
        app:layout_constraintBottom_toBottomOf="@id/iv_hot_news_layout"
        app:layout_constraintLeft_toLeftOf="@id/iv_hot_news_layout"
        app:layout_constraintRight_toRightOf="@id/iv_hot_news_layout"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:overScrollMode="never"/>

</androidx.constraintlayout.widget.ConstraintLayout>